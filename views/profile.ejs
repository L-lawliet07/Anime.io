    <%- include ('partials/homenav.ejs') %>

    <div class="profile-container">

        <div class="profile">
            <div class="profile__image">
                <div class="profile__image-wrap">
                    <img src="/images/people/<%= profile.image %>" alt="">
                </div>
                <% if ( profile.username !== user.username ) { %>
                <div class="profile__image-text">
                    <a href="/user/chat/<%= user.username %>-<%= profile.username %>">Message</a>
                </div>
                <% } %>
            </div>
            <div class="profile__username">
                <%= profile.username %>
            </div>
            <div class="profile__fullname">
                <%= profile.fullname %>
            </div>
            <div class="profile__status">
                <%= profile.status %>
            </div>
            <div class="profile__btn">
                <div>
                    <h6><%= follower.length %></h6>
                    <label for="follower">
                        follower
                    </label>
                </div>
                <div>
                    <h6><%= following.length %></h6>
                    <label for="following">
                        following
                    </label>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <input style="display: none;" type="radio" id="follower" name="info">
        <div class="follower-grid">

            <% for (let people of follower) { %>
            <div class="grid__item">
                <div class="info-profile">
                    <div class="info-profile__image">
                        <img src="/images/people/<%= people.follower.image %>" alt="" srcset="">
                    </div>
                    <div class="info-profile__username">
                        <%= people.follower.username %>
                    </div>
                    <div class="info-profile__btn">
                        <a href="/user/chat/<%= user.username %>-<%= people.follower.username %>">Message</a>
                        <a href="/user/profile/<%= people.follower.username %>">Profile</a>
                    </div>
                </div>
            </div>
            <% } %>
        </div>

        <input style="display: none;" type="radio" id="following" name="info">

        <div class="following-grid">

            <% for (let people of following) { %>
            <div class="grid__item">
                <div class="info-profile">
                    <div class="info-profile__image">
                        <img src="/images/people/<%= people.following.image %>" alt="" srcset="">
                    </div>
                    <div class="info-profile__username">
                        <%= people.following.username %>
                    </div>
                    <div class="info-profile__btn">
                        <a href="/user/chat/<%= user.username %>-<%= people.following.username %>">Message</a>
                        <a href="/user/profile/<%= people.following.username %>">Profile</a>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
